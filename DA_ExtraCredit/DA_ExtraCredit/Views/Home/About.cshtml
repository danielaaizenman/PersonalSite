<style>
    /* Add these styles to your existing CSS */
    .image-container {
        display: flex;
        justify-content: center;
        align-items: center;
        margin: 20px 0;
    }

    .image {
        flex: 1;
        margin: 0 10px;
    }

        .image img {
            max-width: 100%;
            height: auto;
        }

    .dropdown {
        cursor: pointer;
        margin-top: 20px;
        border: 1px solid #ccc;
        padding: 10px;
        border-radius: 5px;
    }

    .dropdown-content {
        display: none;
    }

    .dropdown h2 {
        color: #007bff;
        margin: 0;
    }

    .dropdown.active .dropdown-content {
        display: block;
    }

    .dropdown h3 {
        margin-top: 10px;
    }

    .dropdown ul {
        list-style-type: disc;
        margin-left: 20px;
    }

    /* Style for the expand-heading class */
    .expand-heading {
        position: relative;
        cursor: pointer;
        display: inline-block;
        margin: 0;
        padding-right: 20px; /* Space for the arrow */
    }

    /* Style for the arrow class */
    .arrow {
        position: absolute;
        top: 50%;
        right: 0;
        transform: translateY(-50%);
        font-size: 12px;
    }
    /* CSS styles for the ul and li elements */
    ul {
        list-style-position: inside;
        font-size: 24px; /* Adjust the font size as needed */
    }

    /* Style for list items */
    li {
        margin-left: 16px; /* Adjust the left margin for the list items */
    }

</style>

<script>// JavaScript to toggle dropdown content
    const dropdowns = document.querySelectorAll('.dropdown');

    dropdowns.forEach((dropdown) => {
        const toggle = dropdown.querySelector('h2');
        toggle.addEventListener('click', () => {
            dropdown.classList.toggle('active');
        });
    });</script>
